@using OTTCreator.WebApp.ViewModels;
@model IEnumerable<ContentListViewModel>

@{
    ViewData["Title"] = "Вміст";
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered align-content-center" id="Datatable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CroppedImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Stream)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HasVideo)
                        </th>
                        <th class="dontNeedFilter">
                            Дії
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contentItem in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(c => contentItem.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(c => contentItem.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(c => contentItem.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(c => contentItem.Image)
                            </td>
                            <td>
                                @Html.DisplayFor(c => contentItem.CroppedImage)
                            </td>
                            <td>
                                @Html.DisplayFor(c => contentItem.Stream)
                            </td>
                            @if (contentItem.HasVideo)
                            {
                                <td>
                                    Так
                                </td>
                            }
                            else
                            {
                                <td>
                                    Ні
                                </td>
                            }
                            <td>
                                <div class="btn-group-vertical w-100">
                                    <a class="btn btn-warning" asp-controller="Content" asp-action="Edit" asp-route-Id="@contentItem.Id"><i class="fa fa-edit"></i><br>Редагувати</a>
                                    <a class="btn btn-danger" asp-controller="Content" asp-action="Delete" asp-route-Id="@contentItem.Id"><i class="fa fa-trash"></i><br>Видалити</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="~/js/contentDatatable.js"></script>
}
