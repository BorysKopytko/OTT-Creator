@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Підтвердження реєстрації";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Натисніть тут для підтвердження вашого облікового запису</a>
</p>
    }
    else
    {
<p>
        Будь ласка. перевірте вашу електронну пошту, щоб підтвердити Ваш обліковий запис.
</p>
    }
}

